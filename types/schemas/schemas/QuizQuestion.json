{
  "$id": "QuizQuestion",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "question": {
      "type": "string"
    },
    "answers": {
      "type": "array",
      "items": {
        "$ref": "QuizAnswer"
      }
    },
    "correctAnswer": {
      "type": "number"
    }
  },
  "required": [
    "question",
    "answers",
    "correctAnswer"
  ],
  "additionalProperties": false
}